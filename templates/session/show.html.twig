{% extends 'base.html.twig' %}

{% block title %}{{ session }}{% endblock %}

{% block body %}
<h1>{{ session }}</h1>

<div class="container">
    <h2>Informations :</h2>
    <p>Encadr√© par {{ session.formateur }}</p>
    {% if session.description | length > 0 %}
        <p>{{ session.description }}</p>
    {% endif %}
    <p>Du {{ session.dateDebutFr }} au {{ session.dateFinFr }}</p>
    <p>Nombre de places : {{ session.nbPlaces }}</p>
</div>

<div class="container">
    <h2>Modules :</h2>

    {% if session.programmes | length > 0 %}

        <table class="table table-bordered table-striped table-hover">
            <thead>
                <tr>
                    <th>Module</th>
                    <th>Jours</th>
                </tr>
            </thead>
            <tbody>

            {% for programme in session.programmes %}
                <tr>
                    <td>{{ programme.unite }}</td>
                    <td>{{ programme.nbJours }}</td>
                </tr>
            {% endfor %}
                        
            </tbody>
        </table>

    {% else %}
        <p>Aucun module disponible</p>
    {% endif %}

</div>

{% endblock %}
